{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "opener:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-read-dir",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$HOME/**/.images",
        "$HOME/**/.images/**",
        "$HOME/**/.kanban-config.json",
        "$DOCUMENT/**",
        "$DOCUMENT/**/.images",
        "$DOCUMENT/**/.images/**",
        "$DOCUMENT/**/.kanban-config.json",
        "$DESKTOP/**",
        "$DESKTOP/**/.images",
        "$DESKTOP/**/.images/**",
        "$DESKTOP/**/.kanban-config.json"
      ]
    }
  ]
}
